{% extends 'base.html.twig' %}

{% block body %}
    <h1 style="font-size: 28px;">Edit customer</h1>

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.name) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter customer name'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.address) }}
        {{ form_widget(form.address, {'attr': {'class': 'form-control', 'placeholder': 'Enter customer address'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.phone) }}
        {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'Enter customer phone number'}}) }}
    </div>

    <button type="submit" class="btn btn-primary">Save changes</button>

    {{ form_end(form) }}
{% endblock %}