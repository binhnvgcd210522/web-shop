{% extends 'base.html.twig' %}

{% block stylesheets %}
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
      font-family: Arial, sans-serif;
      margin-bottom: 20px;
    }

    th {
      background-color: #007bff;
      color: #fff;
      text-align: left;
      vertical-align: middle;
      padding: 12px 16px;
      font-weight: 600;
      text-transform: uppercase;
      font-size: 14px;
      border: none;
    }

    td {
      border: 1px solid #ddd;
      text-align: left;
      padding: 8px;
      vertical-align: middle;
    }

    a {
      color: #007bff;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }
  </style>
{% endblock %}

{% block body %}
    <h1>Customer list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone number</th>
        </tr>
        </thead>
        <tbody>
        {% for c in customer %}
            <tr>
                <td><a href="{{ path('customer_show', { 'id': c.id }) }}">{{ c.id }}</a></td>
                <td>{{ c.name }}</td>
                <td>{{ c.address }}</td>
                <td>{{ c.phone }}</td>
               
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
    <li>
       <button><a href="{{ path('customer_create') }}">Create a new customer</a></button>
    </li>
  </ul>
{% endblock %}
