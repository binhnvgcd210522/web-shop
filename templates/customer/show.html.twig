{% extends 'base.html.twig' %}

{% block body %}
  <h1>Customer</h1>

  <table>
    <tbody>
    <tr>
      <th>Id</th>
      <td>{{ customer.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{ customer.name }}</td>
    </tr>
    <tr>
      <th>Address</th>
      <td>{{ customer.Address }}</td>
    </tr>
    <tr>
      <th>Phone number</th>
      <td>{{ customer.phone }}</td>
    </tr>
    </tbody>
  </table>

  <ul>
    <li>
      <a href="{{ path('customer_index') }}">Back to the list</a>
    </li>
  </ul>
{% endblock %}